@model S.I.A.C.Models.ViewModels.SearchViewModel

@{
    ViewBag.Title = "SearchID";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>SearchID</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>SearchViewModel</h4>
        <hr/>
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        <div class="form-group">
            @Html.LabelFor(model => model.toSearch, new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.toSearch, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.toSearch, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default"/>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("  Regresar", "Index", "Home", null, new {@class = "btn btn-danger btn-lg glyphicon glyphicon-arrow-left"})
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}