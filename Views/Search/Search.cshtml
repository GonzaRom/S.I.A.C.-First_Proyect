@model S.I.A.C.Models.ViewModels.SearchViewModel

@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="text-success" align="left">
    @ViewBag.Error
</div>
<h2>Buscador:</h2>

<p align="center">Puede buscar por nombre de cliente, nombre de tecnico, descripcion o direccion. Si no recuerda completamente puede probar con partes del texto a buscar.</p>
<div class="row center-block">
    <div class="col">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
        <div class=" d-flex justify-content-center input-group">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.ValidationMessageFor(model => model.toSearch, "", new { @class = "text-danger" })
            @Html.EditorFor(model => model.toSearch, new { htmlAttributes = new { @class = "form-control", placeholder = "Buscar en el sistema..." } })
            <div class="input-group-append">
                <button class="btn btn-outline-secondary btn-sm" type="submit">
                    <i class="material-icons">search</i>
                </button>
            </div>

        </div>
        }
    </div>
</div>


<div>
    @Html.ActionLink("  Regresar", "Index", "Home", null, new {@class = "btn btn-danger btn-lg glyphicon glyphicon-arrow-left"})
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}